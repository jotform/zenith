{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".github",
    ".eslintrc.js",
    "tests/__mocks__",
    "src/commands/graph/{ui,server}"
  ]
}
